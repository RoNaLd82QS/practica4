@{
    ViewData["Title"] = "Análisis de Sentimiento";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

            <form method="post" class="card shadow-sm p-4">
                <div class="mb-3">
                    <label for="texto" class="form-label">Escribe tu opinión:</label>
                    <textarea id="texto" name="texto" class="form-control" rows="4" placeholder="Escribe aquí tu opinión..." required></textarea>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Analizar</button>
                </div>
            </form>

            @if (ViewBag.Resultado != null)
            {
                <div class="card mt-4 shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title text-center mb-3">Resultado del Análisis</h4>
                        <p><strong>Texto:</strong> @ViewBag.Texto</p>
                        <p><strong>Sentimiento:</strong> 
                            <span class="badge @(ViewBag.Resultado == "Positivo" ? "bg-success" : "bg-danger")">
                                @ViewBag.Resultado
                            </span>
                        </p>
                        <p><strong>Score de Predicción:</strong> @ViewBag.Score</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
